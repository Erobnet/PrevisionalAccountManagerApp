<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Default Light Theme Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#F8F9FA"/>
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="TextBrush" Color="#323130"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#605E5C"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#CCCCCC"/>
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="DisabledBrush" Color="#A19F9D"/>
    
</ResourceDictionary>