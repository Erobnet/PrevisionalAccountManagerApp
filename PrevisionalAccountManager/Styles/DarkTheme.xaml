<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Dark Theme Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#2D2D30" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#3F3F46" />
    <SolidColorBrush x:Key="PrimaryBrush" Color="#4FC3F7" />
    <SolidColorBrush x:Key="PrimaryHoverBrush" Color="#29B6F6" />
    <SolidColorBrush x:Key="TextBrush" Color="#FFFFFF" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#CCCCCC" />
    <SolidColorBrush x:Key="BorderBrush" Color="#5A5A5A" />
    <SolidColorBrush x:Key="BorderFocusBrush" Color="#4FC3F7" />
    <SolidColorBrush x:Key="ErrorBrush" Color="#F48FB1" />
    <SolidColorBrush x:Key="SuccessBrush" Color="#A5D6A7" />
    <SolidColorBrush x:Key="BackgroundHoverBrush" Color="Transparent" />
    <SolidColorBrush x:Key="DisabledBrush" Color="#6D6D6D" />

</ResourceDictionary>