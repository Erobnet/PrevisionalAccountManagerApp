<UserControl x:Class="PrevisionalAccountManager.Views.AccountBalanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:app="PrevisionalAccountManager"
             xmlns:vm="clr-namespace:PrevisionalAccountManager.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="1000" d:DesignHeight="800">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource FieldLabelStyle}" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E86AB" Padding="10">
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <TextBlock Text="💰 Provisional Account Manager"
                           Style="{StaticResource TitleStyle}"
                           Foreground="White"
                           VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Calendar and Add Transaction -->
            <Border Grid.Column="0">
                <StackPanel Margin="10">
                    <Label Content="📅 Select Date" />
                    <Calendar x:Name="CalendarTransactionDateSelection"
                              SelectionMode="MultipleRange"
                              HorizontalAlignment="Center"
                              SelectedDatesChanged="CalendarTransactionDateSelection_OnSelectedDatesChanged" />

                    <Separator Margin="0,10" />

                    <Label Content="Transaction Detail" FontSize="16" />
                    <Label Content="Period:" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox ItemsSource="{Binding AvailablePeriodTypes}"
                                  SelectedItem="{Binding SelectedPeriodType}"
                                  Grid.Column="0" />
                        <TextBox Visibility="{Binding IsPeriodCountVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                 Text="{Binding PeriodCount}"
                                 Grid.Column="1"
                                 Width="60" />
                    </Grid>

                    <Label Content="Amount:" />
                    <TextBox
                        Text="{Binding NewTransactionViewModel.Amount, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource AmountTypeToNumberConverter}}"
                        VerticalContentAlignment="Center"
                        Style="{StaticResource BaseInteractableComponent}" />

                    <Label Content="Observation:" />
                    <TextBox Text="{Binding NewTransactionViewModel.Observations, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource BaseInteractableComponent}"
                             VerticalContentAlignment="Center" />

                    <Label Content="Category:" />
                    <!-- Add New Category Section -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ComboBox
                            IsEditable="True"
                            ItemsSource="{Binding Categories}"
                            Text="{Binding NewCategoryName,Mode=OneWayToSource}"
                            SelectedItem="{Binding SelectedCategory}"
                            DisplayMemberPath="Name"
                            SelectedValuePath="Id" />
                        <Button Grid.Column="1"
                                Content="+"
                                Command="{Binding AddCategoryCommand}"
                                Width="40"
                                Style="{StaticResource BaseInteractableComponent}"
                                ToolTip="Add Category" />
                    </Grid>

                    <Label Content="Date:" />
                    <DatePicker SelectedDate="{Binding NewTransactionViewModelDate}">
                        <DatePicker.Resources>
                            <Style TargetType="{x:Type DatePickerTextBox}">
                                <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
                                <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                                            <TextBox x:Name="PART_TextBox"
                                                     Text="{Binding Path=Text, RelativeSource={RelativeSource AncestorType={x:Type DatePickerTextBox}}}"
                                                     Foreground="{DynamicResource TextBrush}"
                                                     Background="{DynamicResource BackgroundBrush}"
                                                     CaretBrush="{DynamicResource TextBrush}"
                                                     SelectionBrush="{DynamicResource BackgroundBrush}"
                                                     SelectionTextBrush="{DynamicResource TextBrush}" />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Content="Add Transaction"
                                Command="{Binding AddTransactionCommand}"
                                Width="Auto"
                                Margin="0,10,5,0"
                                Style="{StaticResource PrimaryButtonStyle}" />
                        <Button Content="Search Transaction"
                                Command="{Binding SearchTransactionCommand}"
                                Width="Auto"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="5,10,0,0" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Center Panel: Selected Date Details -->
            <Border Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Balance Summary -->
                    <Border Grid.Row="1" CornerRadius="5" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Income" FontWeight="Bold" />
                                <TextBlock
                                    Text="{Binding SelectedDateBalanceViewModel.TotalIncome,Converter={StaticResource AmountTypeToNumberConverter},ConverterParameter=C2}"
                                    FontSize="16"
                                    Foreground="Green" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Total Expenses" FontWeight="Bold" />
                                <TextBlock
                                    Text="{Binding SelectedDateBalanceViewModel.TotalExpenses,Converter={StaticResource AmountTypeToNumberConverter},ConverterParameter=C2}"
                                    FontSize="16"
                                    Foreground="Red" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Ending Balance" FontWeight="Bold" />
                                <TextBlock
                                    Text="{Binding SelectedDateBalanceViewModel.EndingBalance, Converter={StaticResource AmountTypeToNumberConverter},ConverterParameter=C2}"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="{Binding SelectedDateBalanceViewModel.EndingBalance, Converter={StaticResource AmountTypeToColorConverter}}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                    <!-- Transactions List -->
                    <GroupBox Grid.Row="2" Header="{Binding SelectedDateBalanceViewModel.DateRange}">
                        <ListView ItemsSource="{Binding FilteredTransactions}"
                                  SelectionChanged="TransactionsListBox_SelectionChanged"
                                  MinWidth="400"
                                  Height="Auto">
                            <ListView.InputBindings>
                                <KeyBinding Key="Delete" Command="{Binding DeleteSelectedTransactionCommand}" />
                            </ListView.InputBindings>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Amount, Converter={StaticResource AmountTypeToNumberConverter}, ConverterParameter=C2}"
                                                       VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="1" Text="{Binding Date, StringFormat=dd/MM/yyyy}" VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="2" Text="{Binding Observations}" VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="3" Text="{Binding Category, Converter={StaticResource CategoryReadonlyToDisplayStringConverter}}"
                                                       VerticalAlignment="Center" />
                                            <Button Grid.Column="4"
                                                    Content="❌"
                                                    Command="{Binding DataContext.DeleteSelectedTransactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    ToolTip="Delete Transaction (Delete Key)" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </GroupBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>