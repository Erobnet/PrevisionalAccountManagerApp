<UserControl x:Class="PrevisionalAccountManager.Views.AccountBalanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:PrevisionalAccountManager.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="1368" d:DesignHeight="800"
             d:DataContext="{d:DesignInstance Type=viewModels:AccountBalanceRootViewModelDesign, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <Style TargetType="TextBlock" BasedOn="{StaticResource FieldTextBlockStyle}" />
        <Style x:Key="TransactionDetailLabelColumn" TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
            <Setter Property="Width" Value="90" />
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
            <Setter Property="Margin" Value="2.5"></Setter>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Margin" Value="2.5"></Setter>
        </Style>
    </UserControl.Resources>

    <Grid PreviewMouseMove="Root_OnPreviewMouseMove">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2E86AB" Padding="10">
            <StackPanel Orientation="Horizontal" Background="Transparent">
                <TextBlock Text="💰 Provisional Account Manager"
                           Style="{StaticResource TitleStyleTextBlock}"
                           Foreground="White" />
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!-- Left Panel: Calendar and Add Transaction -->
            <Border Grid.Column="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10" Width="300">
                        <Label Content="📅 Select Date" />
                        <Calendar x:Name="CalendarTransactionDateSelection"
                                  SelectionMode="MultipleRange"
                                  HorizontalAlignment="Center"
                                  SelectedDatesChanged="CalendarTransactionDateSelection_OnSelectedDatesChanged" Width="300" Height="300" />
                        <Separator Margin="0,10" />
                        <Label Content="Transaction Detail" Style="{StaticResource TitleStyle}" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Label Grid.Column="0" Content="Period:" Style="{StaticResource TransactionDetailLabelColumn}" />
                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <ComboBox ItemsSource="{Binding AvailablePeriodTypes}"
                                          SelectedItem="{Binding SelectedPeriodType}"
                                          MinWidth="70" />
                                <TextBox Grid.Column="1" Visibility="{Binding IsPeriodCountVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                                         Text="{Binding PeriodCount}" />
                            </Grid>
                            <!-- Amount Part-->
                            <Label Grid.Row="1" Grid.Column="0" Content="Amount:" Style="{StaticResource TransactionDetailLabelColumn}" />
                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <ComboBox
                                    ItemsSource="{Binding AmountOperations}"
                                    SelectedItem="{Binding SelectedOperation}"
                                    MinWidth="70" />
                                <TextBox Grid.Column="1"
                                         Text="{Binding NewTransactionViewModel.Amount, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource AmountTypeToNumberConverter}}"
                                         VerticalContentAlignment="Center" />
                            </Grid>
                            <!-- Observation part -->
                            <Label Grid.Row="2" Grid.Column="0" Content="Observation:" Style="{StaticResource TransactionDetailLabelColumn}" />
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewTransactionViewModel.Observations, UpdateSourceTrigger=PropertyChanged}"
                                     MinWidth="100" />

                            <Label Grid.Row="3" Grid.Column="0" Content="Category:" Style="{StaticResource TransactionDetailLabelColumn}" />
                            <ComboBox Grid.Row="3" Grid.Column="1"
                                      IsEditable="True"
                                      StaysOpenOnEdit="True"
                                      Text="{Binding NewCategoryName, Mode=OneWayToSource}"
                                      ItemsSource="{Binding Categories,Mode=OneWay}"
                                      SelectedItem="{Binding SelectedCategory}"
                                      DisplayMemberPath="Name"
                                      SelectedValuePath="Id"
                                      HorizontalAlignment="Stretch" />
                        </Grid>


                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Button Content="Add Transaction"
                                    Command="{Binding AddTransactionCommand}"
                                    Width="Auto"
                                    Margin="0,10,5,0"
                                    Style="{StaticResource PrimaryButtonStyle}" />
                            <Button Content="Search Transaction"
                                    Command="{Binding SearchTransactionCommand}"
                                    Width="Auto"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    Margin="5,10,0,0" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Center Panel: Selected Date Details -->
            <Border Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Balance Summary -->
                    <Border Grid.Row="1" CornerRadius="5" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Income" FontWeight="Bold" />
                                <TextBlock
                                    Text="{Binding SelectedDateBalanceViewModel.TotalIncome,Converter={StaticResource AmountTypeToNumberConverter},ConverterParameter=C2}"
                                    FontSize="16"
                                    Foreground="Green" />
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Total Expenses" FontWeight="Bold" />
                                <TextBlock
                                    Text="{Binding SelectedDateBalanceViewModel.TotalExpenses,Converter={StaticResource AmountTypeToNumberConverter},ConverterParameter=C2}"
                                    FontSize="16"
                                    Foreground="Red" />
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Ending Balance" FontWeight="Bold" />
                                <TextBlock
                                    Text="{Binding SelectedDateBalanceViewModel.EndingBalance, Converter={StaticResource AmountTypeToNumberConverter},ConverterParameter=C2}"
                                    FontSize="18"
                                    FontWeight="Bold"
                                    Foreground="{Binding SelectedDateBalanceViewModel.EndingBalance, Converter={StaticResource AmountTypeToColorConverter}}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                    <!-- Transactions List -->
                    <GroupBox Grid.Row="2" Header="{Binding SelectedDateBalanceViewModel.DateRange}">
                        <ListView x:Name="FilteredTransactionsListView"
                                  LostFocus="FilteredTransactionsListView_OnLostFocus"
                                  ItemsSource="{Binding FilteredTransactions}"
                                  SelectionChanged="FilteredTransactionsListView_SelectionChanged"
                                  MinWidth="400"
                                  Height="Auto">
                            <ListView.InputBindings>
                                <KeyBinding Key="Delete" Command="{Binding DeleteSelectedTransactionCommand}" />
                            </ListView.InputBindings>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="5">
                                        <Grid Background="Transparent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <TextBox Grid.Column="0"
                                                     Text="{Binding Amount, Converter={StaticResource AmountTypeToNumberConverter}, ConverterParameter=C2, UpdateSourceTrigger=LostFocus}"
                                                     VerticalAlignment="Center" />
                                            <DatePicker Grid.Column="1" Text="{Binding Date, StringFormat=dd/MM/yyyy}" VerticalAlignment="Center" />
                                            <TextBox Grid.Column="2" Text="{Binding Observations}" VerticalAlignment="Center" />
                                            <ComboBox Grid.Column="3"
                                                      Text="{Binding Category, Mode=OneWay}"
                                                      ItemsSource="{Binding DataContext.Categories, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=OneWay}"
                                                      SelectedItem="{Binding Category, Mode=TwoWay}"
                                                      DisplayMemberPath="Name"
                                                      SelectedValuePath="Id"
                                                      HorizontalAlignment="Stretch" />
                                            <Button Grid.Column="4"
                                                    Content="❌"
                                                    Command="{Binding DataContext.DeleteSelectedTransactionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    ToolTip="Delete Transaction (Delete Key)"
                                                    ClickMode="Release" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </GroupBox>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>