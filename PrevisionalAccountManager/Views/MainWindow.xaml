<Window x:Class="PrevisionalAccountManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PrevisionalAccountManager.Views"
        xmlns:vm="clr-namespace:PrevisionalAccountManager.ViewModels"
        Title="Previsional Account Manager"
        Width="1620" Height="768" WindowStartupLocation="Manual"
        Background="{DynamicResource BackgroundBrush}">
    <Window.Resources>
        <DataTemplate x:Key="LoginViewTemplate">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate x:Key="AccountBalanceViewTemplate">
            <views:AccountBalanceView />
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Navigation Bar (visible only when logged in) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="{DynamicResource SurfaceBrush}"
                    Visibility="{Binding IsLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Button Visibility="{Binding IsShowingAccountBalance, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Content="Account Balance" Command="{Binding ShowAccountBalanceCommand}" Margin="5"
                    Style="{DynamicResource SecondaryButtonStyle}" />
            <Button Content="Logout" Command="{Binding LogoutCommand}" Margin="5"
                    Style="{DynamicResource SecondaryButtonStyle}" />
        </StackPanel>

        <!-- Content Area -->
        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}"
                        ContentTemplate="{Binding CurrentViewTemplate}" />
    </Grid>
</Window>